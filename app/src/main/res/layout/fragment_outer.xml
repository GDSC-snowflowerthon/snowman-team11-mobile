<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.vote.category.InnerFragment">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/btn_long_padding"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/selector_resource"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_long_padding" />
        <ImageButton
            android:id="@+id/btn_short_padding"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/selector_resource"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_short_padding" />

        <ImageButton
            android:id="@+id/btn_coat"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/selector_resource"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_coat" />

        <ImageButton
            android:id="@+id/btn_none"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/selector_resource"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/img_empty" />

    </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>